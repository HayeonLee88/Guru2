<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/outTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울여대 주변"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/catimageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/catimageView"
        android:layout_width="410dp"
        android:layout_height="191dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outTextView"
        app:srcCompat="@drawable/squirrel" />

    <Button
        android:id="@+id/btnEat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E8E8E8"
        android:gravity="center"
        android:padding="15dp"
        android:text="음식점"
        android:textColor="#FF535353"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDrink"
        app:layout_constraintEnd_toStartOf="@+id/btnWalk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catimageView" />

    <Button
        android:id="@+id/btnWalk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E8E8E8"
        android:padding="15dp"
        android:text="산책 스팟"
        android:textColor="#FF535353"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDrink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEat"
        app:layout_constraintTop_toBottomOf="@+id/catimageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDrink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E8E8E8"
        android:padding="15dp"
        android:text="카페"
        android:textColor="#FF535353"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEat" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E8E8E8"
        android:padding="15dp"
        android:text="놀거리"
        android:textColor="#FF535353"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDrink"
        app:layout_constraintTop_toBottomOf="@+id/btnWalk" />

    <Button
        android:id="@+id/btnSstudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="196dp"
        android:backgroundTint="#E8E8E8"
        android:gravity="center"
        android:padding="15dp"
        android:text="스터디 스팟"
        android:textColor="#FF535353"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDrink" />


</androidx.constraintlayout.widget.ConstraintLayout>