<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.swu_in.result.food.FoodResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/PlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/darkblue"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/white"
            android:text="[서울여대 음식점] 아딸 떡볶이"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="#000000"
            android:maxWidth="200dp"
            android:maxHeight="50dp"
            android:src="@drawable/addal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:padding="6dp"
                android:text="장소 위치"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/PostalAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:text="서울특별시 노원구 화랑로 621, 1층 " />

            <TextView
                android:id="@+id/TitleExplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:padding="6dp"
                android:text="세부 설명"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Explain"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:text="대표 메뉴는 1인 세트(떡볶이, 어묵, 순대)입니다. \n점심시간에는 사람이 많이 붐벼 시간이 오래걸립니다. " />

            <TextView
                android:id="@+id/TitleRiview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:padding="6dp"
                android:text="사용자 리뷰"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NickName1"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="  슈니왕"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Review1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="여기 찐 맛집~! 밀떡 추천이요ㅎㅎ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NickName2"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="깜디맘"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Review2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="맛있긴 한데.. 제 기준 쏘쏘였습니다.." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NickName3"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="이월척"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Review3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="매운거 좋아하시는 분들은 좋아할듯?!" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>