<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="442dp"
            android:layout_height="wrap_content"
            android:background="#5DA4BE"
            app:srcCompat="@drawable/actionbar2" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        tools:context=".views.ThemaActivity">

        <ImageButton
            android:id="@+id/UserIn"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/user_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageButton
            android:id="@+id/btnIn"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/seoul_in"
            app:layout_constraintBottom_toTopOf="@+id/btnOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageButton
            android:id="@+id/btnOut"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/seoul_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>